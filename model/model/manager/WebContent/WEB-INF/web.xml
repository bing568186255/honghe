<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
	<display-name>GIS</display-name>
  <welcome-file-list>
    <welcome-file>error.html</welcome-file>
  </welcome-file-list>

	<filter>  
	    <filter-name>UrlRewriteFilter</filter-name>  
	    <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>  
        <init-param>
            <param-name>logLevel</param-name>
            <param-value>WARN</param-value>
        </init-param>
	</filter>  
	<filter-mapping>  
	    <filter-name>UrlRewriteFilter</filter-name>  
	    <url-pattern>/*</url-pattern>  
	    <dispatcher>REQUEST</dispatcher>  
	    <dispatcher>FORWARD</dispatcher>  
	</filter-mapping>  

  <servlet>
	<servlet-name>AjaxPage</servlet-name>
	<servlet-class>DragonNet.Page.AjaxPage</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>ActionPage</servlet-name>
	<servlet-class>DragonNet.Page.PageSettle</servlet-class>
  </servlet>
    <servlet>
	<servlet-name>HotelPage</servlet-name>
	<servlet-class>DragonNet.Page.HotelPage</servlet-class>
  </servlet>
  
  <servlet-mapping>
	<servlet-name>AjaxPage</servlet-name>
	<url-pattern>/ajax.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>ActionPage</servlet-name>
	<url-pattern>/action.html</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
	<servlet-name>HotelPage</servlet-name>
	<url-pattern>/hotel.html</url-pattern>
  </servlet-mapping>

	<session-config>
		<session-timeout>360</session-timeout>
	</session-config>

  <jsp-config>
	  <taglib>
	    <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
	    <taglib-location>/WEB-INF/tlds/c.tld</taglib-location>
	  </taglib> 
 	  <taglib>
	    <taglib-uri>http://java.sun.com/jsp/jstl/functions</taglib-uri>
	    <taglib-location>/WEB-INF/tlds/fn.tld</taglib-location>
	  </taglib> 
  </jsp-config>
 </web-app>

